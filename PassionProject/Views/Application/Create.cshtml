@model PassionProject.Models.AppDto

@{
    ViewBag.Title = "Create";
}

<h2>Create Application</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.AdoptId, "Adopt Id")
        @Html.EditorFor(model => model.AdoptId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.AdoptId, "", new { @class = "text-danger" })
    </div>

    <!-- Add other form fields based on your model properties -->

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
