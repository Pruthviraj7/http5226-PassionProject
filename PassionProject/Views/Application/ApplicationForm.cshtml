<!-- Display Pet Details -->
<h3>Pet Details</h3>
<dl>
    <dt>Pet ID:</dt>
    <dd>@ViewBag.PetDetails?.PetId</dd>

    <dt>Pet Name:</dt>
    <dd>@ViewBag.PetDetails?.PetName</dd>
</dl>

<!-- Display Applications -->
<h3>Applications</h3>
@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var app in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Application ID: @app?.AppId</h5>
                        <p class="card-text">Submission Date: @app?.AppSubmission?.ToShortDateString()</p>
                        <p class="card-text">Status: @app?.AppStatus</p>
                        <p class="card-text">Comments: @app?.AppComments</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No applications found for this pet.</p>
}
